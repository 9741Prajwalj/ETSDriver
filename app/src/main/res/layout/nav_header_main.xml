<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="156.00dp"
    android:background="@color/blue"
    android:elevation="13.00dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingStart="16.00dp"
    android:paddingTop="13.00dp"
    android:paddingEnd="16.00dp"
    android:paddingBottom="26.00dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13.00dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="78.00dp"
            android:layout_height="78.00dp"
            android:src="@drawable/ic_dummy_user"
            app:civ_border_color="@color/white"
            app:civ_border_width="2.60dp"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/status"
            android:layout_width="19.50dp"
            android:layout_height="19.50dp"
            android:layout_marginStart="52dp"
            app:civ_border_color="#000000"
            app:civ_border_width="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/approved" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6.50dp"
            android:layout_marginEnd="6.50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_profile"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/usernameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center|start"
                android:maxLines="1"
                android:paddingTop="6.50dp"
                android:textColor="@android:color/white"
                android:textSize="18.20dp" />

            <TextView
                android:id="@+id/tvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameTxt"
                android:layout_toEndOf="@+id/img_profile"
                android:drawableEnd="@drawable/ic_star"
                android:drawableTint="@color/colorAccent"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="14.30dp"
                android:visibility="visible" />

            <com.mlt.etsdriver.utills.MyTextView
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center|start"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="14.30dp" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


