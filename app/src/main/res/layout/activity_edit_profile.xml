<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/text_color_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="247.00dp"
                android:layout_gravity="start"
                android:background="@color/blue"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="26.00dp"
                        android:layout_height="26.00dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_back_icon"
                        android:backgroundTint="@color/text_color_white"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center_vertical"
                        android:text="@string/edit_profile"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="83.20dp"
                    android:layout_height="83.20dp"
                    android:layout_marginStart="26.00dp"
                    android:layout_marginTop="19.50dp"
                    android:layout_marginBottom="6.50dp"
                    android:src="@drawable/ic_dummy_user"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />


                <com.mlt.etsdriver.utills.MyTextView
                    android:id="@+id/txtHeaderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26.00dp"
                    android:text="Rajan Kumar"
                    android:textColor="@color/text_color_white"
                    android:textSize="19.5sp" />

                <com.mlt.etsdriver.utills.MyTextView
                    android:id="@+id/txtHeaderMob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26.00dp"
                    android:layout_marginBottom="26.00dp"
                    android:text="+917277834909"
                    android:textColor="@color/text_color_white"
                    android:textSize="14.30dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.00dp"
            app:cardBackgroundColor="@color/text_color_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cancel_ride_color" />

                <LinearLayout
                    android:id="@+id/layoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="13.00dp"
                    android:paddingTop="6.50dp"
                    android:paddingBottom="6.50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/calbg"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/name"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="16.90dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cancel_ride_color" />


                <LinearLayout
                    android:id="@+id/layoutAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="13.00dp"
                    android:paddingTop="6.50dp"
                    android:paddingBottom="6.50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/calbg"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/email"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="16.90dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cancel_ride_color" />

                <LinearLayout
                    android:id="@+id/layoutMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="13.00dp"
                    android:paddingTop="6.50dp"
                    android:paddingBottom="6.50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/calbg"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/mobile"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/mobile_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="16.90dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cancel_ride_color" />

                <LinearLayout
                    android:id="@+id/layoutService"
                    android:layout_width="match_parent"
                    android:layout_height="52.00dp"
                    android:orientation="horizontal"
                    android:paddingTop="13.00dp"
                    android:paddingBottom="13.00dp"
                    android:visibility="gone">

                    <com.mlt.etsdriver.utills.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_name"
                        android:drawablePadding="13.00dp"
                        android:drawableTint="@color/white"
                        android:gravity="center_vertical"

                        android:paddingStart="6.50dp"
                        android:text="Service type"
                        android:textColor="@color/white"
                        android:textSize="16.90dp" />

                    <com.mlt.etsdriver.utills.MyEditText
                        android:id="@+id/service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableEnd="@drawable/right"
                        android:drawablePadding="19.50dp"
                        android:enabled="false"
                        android:gravity="center_vertical|end"
                        android:maxLines="1"
                        android:paddingEnd="6.50dp"
                        android:text=""
                        android:textColor="@color/silgray"
                        android:textSize="14.30dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.30dp"
                    android:background="@color/colorAccent"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layoutUpdatePwd"
                    android:layout_width="match_parent"
                    android:layout_height="52.00dp"
                    android:orientation="horizontal"
                    android:paddingTop="13.00dp"
                    android:paddingBottom="13.00dp"
                    android:visibility="gone">

                    <com.mlt.etsdriver.utills.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_password"
                        android:drawablePadding="13.00dp"
                        android:drawableTint="@color/cancel_ride_color"
                        android:gravity="center_vertical"

                        android:paddingStart="6.50dp"
                        android:text="Update Password"
                        android:textColor="@color/white"
                        android:textSize="16.90dp" />

                    <com.mlt.etsdriver.utills.MyTextView
                        android:id="@+id/changePasswordTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawableEnd="@drawable/right"
                        android:drawablePadding="19.50dp"
                        android:gravity="center_vertical|end"
                        android:paddingEnd="6.50dp"
                        android:text=""
                        android:textSize="14.30dp" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="57.20dp"
            android:layout_marginTop="10.40dp"
            android:visibility="gone">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="57.20dp"
                android:background="@drawable/bggradient"
                android:checked="true"

                android:drawableStart="@drawable/ic_notification"
                android:drawablePadding="19.50dp"

                android:drawableTint="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:paddingStart="19.50dp"
                android:paddingEnd="13.00dp"
                android:text="@string/notifications"
                android:textColor="@color/white"
                android:textSize="16.90dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.00dp"
            android:visibility="gone">

            <com.mlt.etsdriver.utills.MyTextView
                android:layout_width="match_parent"
                android:layout_height="57.20dp"
                android:background="@drawable/bggradient"
                android:gravity="center"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </androidx.cardview.widget.CardView>

        <com.mlt.etsdriver.utills.MyButton
            android:id="@+id/saveBTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/theme"
            android:text="@string/update"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>


