<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="13.00dp"
        android:paddingTop="13.00dp"
        android:paddingEnd="13.00dp">

        <com.mlt.etsdriver.utills.MyTextView
            android:id="@+id/datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="9.10dp"
            android:text="January 10- 12:30 PM"
            android:textColor="@color/black"
            android:textSize="15.60dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="15.60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bggradient"
                android:orientation="horizontal"
                android:padding="13.00dp">

                <LinearLayout
                    android:id="@+id/llLeftTop"
                    android:layout_width="26.00dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/llTopMiddle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20.80dp"
                        android:layout_height="20.80dp"

                        android:src="@drawable/pick_up_location" />

                    <View
                        android:layout_width="1.30dp"
                        android:layout_height="78.00dp"
                        android:background="@color/white" />

                    <ImageView
                        android:layout_width="20.80dp"
                        android:layout_height="20.80dp"


                        android:src="@drawable/destination_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="13.00dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <com.mlt.etsdriver.utills.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/source_location"
                            android:textColor="@color/white"
                            android:textSize="15.60dp" />

                        <com.mlt.etsdriver.utills.MyTextView
                            android:id="@+id/txtSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="40"
                            android:maxLines="1"
                            android:text="Chhattarpur Road"
                            android:textColor="@color/white"
                            android:textSize="19.50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19.50dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mlt.etsdriver.utills.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/destination_location"
                            android:textColor="@color/white"
                            android:textSize="15.60dp" />

                        <com.mlt.etsdriver.utills.MyTextView
                            android:id="@+id/txtDestination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="40"
                            android:maxLines="1"
                            android:text="@string/home"
                            android:textColor="@color/white"
                            android:textSize="19.50dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
